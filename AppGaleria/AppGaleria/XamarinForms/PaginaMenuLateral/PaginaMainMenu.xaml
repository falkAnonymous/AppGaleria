            xmlns:Carrossel="clr-namespace:AppGaleria.XamarinForms.PaginaCarrossel">
    <!--Menu-->

    <!--Esse representa o Master-->
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu">
            <StackLayout>
                <Button Text="Pagina 01"/>
                <Button Text="Pagina 03"/>
                <Button Text="Pagina 03"/>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>


    <!--Conteudo-->

    <!--Esse e o Datail-->
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <Carrossel:PgCarrossel01/>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>