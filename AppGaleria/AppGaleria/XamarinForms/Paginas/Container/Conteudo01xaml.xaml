        <StackLayout Orientation="Vertical" Margin="0,200" Padding="20">
            <Label Text="Tabajara" FontSize="50" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Red" BackgroundColor="#451283"/>
