<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGaleria.XamarinForms.PaginaDeNavegacao.Pagina02"
             NavigationPage.HasBackButton="false"
             Title="Pagina 02">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Pagina 02"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                <Button Text="Voltar" BackgroundColor="Red" TextColor="White" CornerRadius="50" Margin="40,10" Clicked="Button_Clicked"/>
                <Button Text="Avançar" BackgroundColor="Blue" TextColor="White" CornerRadius="50"  Margin="60,10" Clicked="AvancarPagina03"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>